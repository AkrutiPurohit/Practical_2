#include<iostream>

using namespace std;

float perimeter(float a)
{
    return 4*a;
}

float perimeter(float l,float b)
{
    return 2*(l+b);
}

float perimeter(float a,float b,float c)
{
    return a+b+c;
}

int main()
{
    cout<<"Purohit Akruti K."<<endl;
    cout<<"220130318033"<<endl;
    
    float a,b,c;
    
    cout<<"Enter first side of any shape:";
    cin>>a;
    
    cout<<"Enter second side of any shape:";
    cin>>b;
    
    cout<<"Enter third side of any shape:";
    cin>>c;
    
    cout<<"The perimeter of square is:"<<perimeter(a)<<endl;
    cout<<"The perimeter of rectangle is:"<<perimeter(a,b)<<endl;
    cout<<"The perimeter of triangle is:"<<perimeter(a,b,c)<<endl;
    return 0;
}
