//Write a C++ program to add two integer values using call by reference
#include<iostream>
using namespace std;

int add(int &x,int &y)
{
	return x+y;
}

int main()
{
	cout<<"Purohit Akruti K."<<endl;
	cout<<"220130318033"<<endl;
	int a,b;
	cout<<"Enter the value of a and b:";
	cin>>a>>b;
	cout<<"Value of a:"<<a<<endl;
	cout<<"Value of b:"<<b<<endl;
	cout<<"The sum of a and b is:"<<add(a,b);
	return 0;
}
