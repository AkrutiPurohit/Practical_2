//Write a C++ program to access global variable using scope resolution operator without using class.

#include<iostream>

using namespace std;

int a = 28;

int main()
{
	int a = 14;
	cout<<"Purohit Akruti K."<<endl;
	cout<<"220130318033"<<endl;
	
	cout<<"The local value of a is:"<<a<<endl;
	cout<<"The global value of a is:"<<::a<<endl;
	return 0;
}
